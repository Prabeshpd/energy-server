generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DB_CONNECTION_URL")
}

model User {
  id            String         @id @default(uuid()) @db.Uuid
  name          String         @db.VarChar(100)
  email         String         @db.VarChar(50)
  password      String?        @db.VarChar(100)
  image         String?        
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @default(now()) @updatedAt @map("updated_at")
  Project       Project[]

  @@unique([email])
  @@index([email])
  @@map("users")
}

model Project {
  id              String        @id @default(uuid()) @db.Uuid
  projectName     String        @db.VarChar(100) @map("project_name")
  user            User          @relation(fields: [userId], references: [id])
  userId          String        @db.Uuid
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @default(now()) @updatedAt @map("updated_at")

  @@map("projects")
}

model ProjectHistory {
  userId            String        @db.Uuid @map("user_id")
  projectId         String        @db.Uuid @map("project_id")
  energyConsumption Int           @map("energy_consuption")
  time              DateTime    

  @@unique([projectId,  time])
  @@map("project_histories") 
}
